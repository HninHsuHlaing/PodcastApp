<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp"
    android:paddingTop="15dp"
    android:paddingEnd="20dp"

   >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#5854a3"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="10dp"
                    >
                    <ImageView
                        android:id="@+id/imgHomePlayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/placeholder"
                        android:background="@drawable/icon"
                        android:scaleType="centerCrop"
                        />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="23dp"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:id="@+id/tvTitlehomePlayer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Woman Teach Podcast..."
                        android:textSize="17dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />
                    <TextView
                        android:id="@+id/tvdescriptionHomePlayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The #womanintech Show is "
                        android:textColor="#979797"
                        android:layout_marginTop="4dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        >
                        <SeekBar
                            android:id="@+id/progressbar"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:max="100"
                            android:progress="79"
                            android:progressTint="#bae2fe"
                            />
                        <TextView
                            android:id="@+id/tvtimeLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1h left"
                            android:layout_toEndOf="@+id/progressbar"
                            android:textColor="#cee6e7"
                            android:textSize="7sp"
                            android:layout_marginLeft="5dp"
                            />
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1x"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:id="@+id/btnbackward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icons8_replay_30_32"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    />
                <ImageView
                    android:id="@+id/btnplayMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_pause_circle_filled_24"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    />
                <ImageView
                    android:id="@+id/btnforward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icons8_forward_30_30"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zz"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>